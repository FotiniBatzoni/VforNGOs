@model VforNGOss.Models.Volunteer;



@using (Html.BeginForm("Create", "Volunteer", FormMethod.Post))
{
<fieldset>
    <legend>Register Volunteer</legend>
    <div class="form-group">
      <label for="email" class="form-label mt-4 fw-bold" >Email address</label>
         @Html.TextBoxFor(m => m.Email, new {type="email",@class="form-control"})
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <input type="submit" value="Submit" class="btn btn-secondary btn-lg mt-4"/>
  </fieldset>
}

