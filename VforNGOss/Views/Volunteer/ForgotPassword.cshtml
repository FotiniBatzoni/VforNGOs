@model VforNGOss.Models.Volunteer;

@using (Html.BeginForm("ForgotPassword","Volunteer" , FormMethod.Post))
{
  <fieldset>
    <legend>Forgot Password</legend>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4 fw-bold" >Email address</label>
    @Html.TextBoxFor(m => m.Email, new {type="email",@class="form-control"})
    <p style="color:red">
        @ViewBag.emailnotfoundmsg
    </p>
    
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
     
       <br/>
      <label for="password" class="form-label mt-4 fw-bold" >New Password</label>
         @Html.TextBoxFor(m => m.Password, new {type="password",@class="form-control"})
    </div>
  <input type="submit" value="Submit" class="btn btn-secondary btn-lg mt-4 me-4"/>
  </fieldset>
}
